
@model MovieModel;

@{
    ViewData["Title"] = "Movies";
}
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="row">
        <div class="col-6">
            <a class="text-white" asp-controller="HomeMovie" asp-action="Movies">
                <h4>
                   <i class="bi bi-arrow-left"></i>
               </h4>
            </a>
        </div>

        <div class="col-6 text-end">
            <a class="text-white" asp-controller="HomeMovie" asp-action="Movies">
                <h4>
                    <i class="bi bi-x-lg"></i>
                </h4>
            </a>
        </div>
    </div>
</div>

<div class="d-flex flex-column align-items-center text-center">
    <!-- Centered Video -->
    <video width="800" height="400" controls poster="@Url.Content("~/assets/img/movie_img/" + Model.MovieImage)">
        <source src="@Url.Content("~/assets/video/movie_video/" + Model.MovieVideo)" />
    </video>

    <!-- Centered Details -->
    <h4 class="text-secondary mt-3">
        <span>@Model.MovieDate.Year .</span>
        <span>@Model.MovieCategory .</span>
        <span>@Model.MovieLength .</span>
        <span>@Model.MovieLanguage</span>
    </h4>
    <h1 class="text-danger mt-2">@Model.MovieName</h1>
    <h4 class="text-secondary">
        <span>
            <i class="bi bi-eye-fill" style="font-size:24px"></i>
        </span>
        <span>
            @Model.MovieViews
        </span>
    </h4>
    <h5 class="text-secondary mt-2">This is a @Model.MovieType Movie, @Model.MovieDescription</h5>
</div>
