@{
    var seasons = ViewBag.Seasons as List<SeasonModel>;
}
@model SeriesModel;

@{
    ViewData["Title"] = "Series";
}
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-6">
            <a class="text-white" asp-controller="HomeSeries" asp-action="Series">
                <h4>
                    <i class="bi bi-arrow-left"></i>
                </h4>
            </a>
        </div>

        <div class="col-6 text-end">
            <a class="text-white" asp-controller="HomeSeries" asp-action="Series">
                <h4>
                    <i class="bi bi-x-lg"></i>
                </h4>
            </a>
        </div>
    </div>
</div>

<div class="d-flex flex-column align-items-center text-center mb-4" style="border-bottom: 1px solid #FF0000; padding-bottom: 15px;">
    <!-- Centered Image -->
    
    <img width="400" height="400" src="@Url.Content("~/assets/img/series_img/" + Model.SeriesImage)" />

    <!-- Centered Details -->
    <h4 class="text-secondary mt-3">
        <span>@Model.SeriesDate.Year .</span>
        <span>@Model.SeriesCategory .</span>
        <span>@Model.SeriesLanguage</span>
    </h4>
    <h1 class="text-danger mt-2">@Model.SeriesName</h1>
    <h4 class="text-secondary">
        <span>
            <i class="bi bi-eye-fill" style="font-size:24px"></i>
        </span>
        <span>
            @Model.SeriesView
        </span>
    </h4>
    <h5 class="text-secondary mt-2">This is a @Model.SeriesType Series, @Model.SeriesDescription</h5>
</div>

@foreach (SeasonModel season in seasons)
{
    <div class="d-flex align-items-center mb-4" style="border-bottom: 1px solid #ddd; padding-bottom: 15px;">
        <!-- Season Image -->
        <img width="200" height="200" class="me-3" src="@Url.Content("~/assets/img/season_img/" + season.SeasonImage)" alt="Season Image" />

        <!-- Season Details -->
        <div>
            <h4>
                <span class="fw-bold">Season</span>
                <span class="ms-1">@season.SeasonNumber</span>
            </h4>
            <h5 class="text-secondary">@season.SeasonDate.ToString("dd MMM yyyy")</h5>
            <p class="text-secondary">@season.SeasonDescription</p>
            <a class="btn" asp-controller="HomeSeries" asp-action="SelectedSeason" asp-route-SeasonID="@season.SeasonID"
               style="background-color: white; color: black; border: 1px solid black; padding: 5px 15px;">
                <i class="bi bi-play-fill"></i> Watch Now
           </a>
        </div>
    </div>
}